<UserControl x:Class="BholaCattleApp.Views.PregnantAnimalRecordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BholaCattleApp.Views"
             mc:Ignorable="d" Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Pregnant Animals" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                <Button Content="Add" Command="{Binding AddHeiferCommand}" Width="80" Margin="5"/>
                <Button Content="Edit" Command="{Binding EditHeiferCommand}" Width="80" Margin="5"/>
                <Button Content="Delete" Command="{Binding DeleteHeiferCommand}" Width="80" Margin="5"/>
            </StackPanel>
            <DataGrid ItemsSource="{Binding Pregnants}" SelectedItem="{Binding SelectedPregnant}" AutoGenerateColumns="False" Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding PregnantHistoryID}" Width="50"/>
                    <DataGridTextColumn Header="Animal ID" Binding="{Binding AnimalID}" Width="*"/>
                    <DataGridTextColumn Header="Status ID" Binding="{Binding StatusID}" Width="*"/>
                    <DataGridTextColumn Header="Pregnant Date" Binding="{Binding PregnantDate, StringFormat=dd/MM/yyyy}" Width="*"/>
                    <DataGridTextColumn Header="Deliver Date" Binding="{Binding DeliverDate, StringFormat=dd/MM/yyyy}" Width="*"/>
                    <DataGridTextColumn Header="Result" Binding="{Binding Gender}" Width="*"/>
                    <DataGridTextColumn Header="Gender" Binding="{Binding Result}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
