    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="LightGray" Height="50">
            <TextBox Width="150" Margin="10" Text="Search"/>
            <!-- Search box -->
            <TextBlock Text="{Binding UserName}" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="16"/>
            <Button Content="Setting" Margin="0 0 10 0" Height="28"/>
        </StackPanel>

        <!-- Main Grid -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <StackPanel Grid.Column="0" Background="#d2eaf5">
                <Button Content="Home" Command="{Binding NavigateToHomeCommand}" Margin="5"/>
                <!-- Inside StackPanel for sidebar -->
                <Button Content="Animal Records" Command="{Binding NavigateToAnimalRecordsCommand}" />
                <!-- Add other buttons later -->
                <Button Content="Status of Animal" Command="{Binding NavigateToStatusAnimalRecordsCommand}"/>

                <Button Content="Heifer" Command="{Binding NavigateToHeiferRecordsCommand}"/>

                <Button Content="Pregnant" Command="{Binding NavigateTopPregnantAnimalRecordsCommand}"/>
            </StackPanel>

            <!-- Content -->
            <ContentControl Grid.Column="1" Content="{Binding CurrentView}" Margin="10"/>
        </Grid>
    </Grid>
</Window>
